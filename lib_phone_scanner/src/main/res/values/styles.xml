    &lt;!&ndash; 订单打印对话框主题 &ndash;&gt;
    <style name="OrderPrintDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        &lt;!&ndash;边框&ndash;&gt;
        <item name="android:windowIsFloating">true</item>
        &lt;!&ndash;是否浮现在activity之上&ndash;&gt;
        <item name="android:windowIsTranslucent">false</item>
        &lt;!&ndash;半透明&ndash;&gt;
        <item name="android:windowNoTitle">true</item>
        &lt;!&ndash;无标题&ndash;&gt;
        <item name="android:windowBackground">@android:color/transparent</item>
        &lt;!&ndash;背景透明&ndash;&gt;
        <item name="android:backgroundDimEnabled">true</item>
        &lt;!&ndash;模糊&ndash;&gt;
    </style>

    <style name="AppTitleLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navi_height</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTitleContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    &lt;!&ndash; 我的CardView样式&ndash;&gt;
    <style name="ItemCardLayout" tools:keep="@style/ItemCardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp10</item>
        <item name="android:layout_marginRight">@dimen/dp10</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/dp20</item>
        &lt;!&ndash;<item name="android:padding">2dp</item>&ndash;&gt;
        &lt;!&ndash;<item name="android:background">@drawable/shape_bg_white_stroke_round5</item>&ndash;&gt;
    </style>

    &lt;!&ndash; 我的Item样式&ndash;&gt;
    <style name="ItemLineLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp20</item>
        <item name="android:paddingRight">@dimen/dp20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/dp10</item>
        <item name="android:paddingBottom">@dimen/dp10</item>
    </style>

    &lt;!&ndash; 我的Item样式&ndash;&gt;
    <style name="UserItemLineLayout" parent="ItemLineLayout">
        <item name="android:layout_marginLeft">@dimen/dp10</item>
        <item name="android:layout_marginRight">@dimen/dp10</item>
    </style>

    <style name="ItemLineIcon">
        <item name="android:layout_width">@dimen/dp20</item>
        <item name="android:layout_height">@dimen/dp20</item>
    </style>

    <style name="ItemLineContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ff282828</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:paddingStart">@dimen/dp10</item>
        <item name="android:paddingEnd">@dimen/dp10</item>
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:paddingBottom">@dimen/dp5</item>
    </style>

    <style name="ItemLineArrow">
        <item name="android:layout_width">@dimen/dp15</item>
        <item name="android:layout_height">@dimen/dp15</item>
        <item name="android:src">@mipmap/arrow</item>
    </style>

    <style name="ItemLineLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:background">#ffeeeeee</item>
    </style>

    <style name="UserItemLineLine" parent="ItemLineLine">
        <item name="android:layout_marginStart">@dimen/dp20</item>
    </style>

    <style name="progressdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        &lt;!&ndash; <item name="android:textSize">24px</item> &ndash;&gt;
    </style>

    <style name="DialogBottomAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_up_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_down_exit</item>
    </style>

    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#ffD8D8D8</item>
        <item name="colorControlActivated">#802E2E2E</item>
    </style>

    <style name="BottomDialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="UserItemStyle" tools:keep="@style/UserItemStyle">
        <item name="android:layout_marginLeft">@dimen/dp10</item>
        <item name="android:layout_marginRight">@dimen/dp10</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
        <item name="android:background">@drawable/shape_bg_white_stroke_round5</item>
    </style>

